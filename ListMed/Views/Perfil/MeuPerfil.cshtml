@model ListMed.DTO.AlterarPerfil

@{
    ViewBag.Title = "MeuPerfil";
}


<div class="container">
    <div class="row">
        <div class="col-12 offset-md-3 col-md-6 shadow">
            @using (Html.BeginForm("AlterarPerfil", "Perfil", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div style="text-align: center">
                    <h4>@Model.nome</h4>
                </div>

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)


                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <div style="text-align: center;">
                                @if (Model.temFoto != null && Model.temFoto == true)
                                {
                                    <img src="@Url.Action("FotoPerfil", "Perfil")" class="img-fluid rounded-circle" id="imgPadrao" style="height: 85px; width: 85px;" />
                                }
                                else
                                {
                                    <i class="fa fa-user-circle" id="imgPadrao" style="font-size: 4.5rem;"></i>
                                }

                                <img src="" id="imagemTroca" class="img-fluid rounded-circle" style="height: 85px; width: 85px; display: none;" />
                            </div>

                        </div>
                        <div class="col-md-6">
                            <label>Nome</label>
                            @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6" >
                    
                            <div class="custom-file" style="margin-top: calc(1rem + 16px);">
                                <input type="file" name="foto" class="custom-file-input" id="fotoPerfil">
                                <label class="custom-file-label" for="fotoPerfil">Escolha a Foto</label>
                            </div>
                   
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" for="senha">Senha</label>
                 
                                    <input type="password" value="**********" class="form-control" id="senha" readonly />
                                    <a href="~/Perfil/AlterarSenha" >Alterar Senha</a>
                            </div>
                        </div>
                    </div>
             
                </div>

                <div class="form-group">
                    
                        <label>E-mail</label>
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" ,@readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
      
                </div>
        

                <div class="form-group">
                    <div class="col-md-12" style="text-align: right;">
                        <input type="submit" value="Salvar" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/ScriptMed/Perfil.js")
}
